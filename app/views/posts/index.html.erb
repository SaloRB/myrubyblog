<% content_for(:title, 'Blog')%>
<% @posts.each do |post| %>
	<div class="post">
		<h2 class="title"><%= link_to post.title, post %></h2>
		<div class="entry"><%= truncate(post.body, :length => 150) %></div>
		<div class="byline">
			<p class="meta"><%= post.created_at.strftime("%B %d, %Y") %> Posted by <%= post.admin_user.name %></p>
			<p class="links"><%= link_to "Read More", post %> &nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp; <%= link_to "Comments (#{ @comments[post.id] && @comments[post.id].count || 0 })", post %></p>
    	</div>
	</div>
<% end %>